# ========================================
# Earth Copilot MCP Server Configuration
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# REQUIRED: Earth Copilot Backend URLs
# ========================================
# Your deployed Earth Copilot FastAPI container app
EARTH_COPILOT_BASE_URL=https://your-earth-copilot-backend.azurecontainerapps.io

# Your GEOINT service endpoint (if using GEOINT tools)
GEOINT_SERVICE_URL=https://your-geoint-app.azurecontainerapps.io

# ========================================
# REQUIRED: Server Configuration
# ========================================
# Server mode: development, staging, production
MCP_SERVER_MODE=development

# Host binding (0.0.0.0 for remote access, 127.0.0.1 for local only)
HOST=0.0.0.0

# Port for HTTP bridge
PORT=8080

# ========================================
# OPTIONAL: Azure Integration
# ========================================
# Application Insights for monitoring (recommended for production)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Azure Active Directory (for authentication)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# ========================================
# OPTIONAL: API Management (APIM)
# ========================================
# If using Azure API Management for enterprise deployment
APIM_SUBSCRIPTION_KEY=
APIM_GATEWAY_URL=https://your-apim.azure-api.net/earth-copilot

# ========================================
# OPTIONAL: STAC API Configuration
# ========================================
# Microsoft Planetary Computer STAC API (default)
PLANETARY_COMPUTER_STAC_URL=https://planetarycomputer.microsoft.com/api/stac/v1

# Custom STAC API (if using your own)
# STAC_API_URL=https://your-custom-stac-api.com

# ========================================
# OPTIONAL: Security
# ========================================
# API key for simple authentication (not recommended for production)
# Use APIM or OAuth 2.0 for production deployments
API_KEY=

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ========================================
# OPTIONAL: Performance Tuning
# ========================================
# Maximum concurrent tool executions
MAX_CONCURRENT_TOOLS=10

# Request timeout in seconds
REQUEST_TIMEOUT=120

# Cache TTL in seconds (for resource responses)
CACHE_TTL=3600

# ========================================
# OPTIONAL: Logging
# ========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE_PATH=

# Enable detailed request/response logging
ENABLE_DETAILED_LOGGING=false

# ========================================
# OPTIONAL: Development Settings
# ========================================
# Enable hot reload for development
ENABLE_HOT_RELOAD=true

# Enable OpenAPI/Swagger UI at /docs
ENABLE_SWAGGER_UI=true

# Mock mode (for testing without backend)
ENABLE_MOCK_MODE=false

# ========================================
# Example Configuration Values
# ========================================

# Local Development Example:
# EARTH_COPILOT_BASE_URL=http://localhost:5000
# GEOINT_SERVICE_URL=http://localhost:5001
# MCP_SERVER_MODE=development
# HOST=127.0.0.1
# PORT=8080
# ENABLE_HOT_RELOAD=true
# ENABLE_SWAGGER_UI=true

# Azure Production Example (Container Apps):
# EARTH_COPILOT_BASE_URL=https://earth-copilot-prod.azurecontainerapps.io
# GEOINT_SERVICE_URL=https://geoint-prod.azurecontainerapps.io
# MCP_SERVER_MODE=production
# HOST=0.0.0.0
# PORT=80
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx;IngestionEndpoint=https://...
# APIM_GATEWAY_URL=https://earth-copilot-api.azure-api.net/earth-copilot/mcp
# LOG_LEVEL=WARNING

# ========================================
# Notes
# ========================================
# 1. Never commit .env to version control
# 2. Use Azure Key Vault for production secrets
# 3. EARTH_COPILOT_BASE_URL must be accessible from MCP server
# 4. For APIM, use subscription keys or OAuth 2.0
# 5. See README.md for deployment instructions
