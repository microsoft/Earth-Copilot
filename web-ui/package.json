    "axios": "^1.7.7",
    "modern-normalize": "^2.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^1.0.4",
    "jsdom": "^23.0.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vitest": "^1.0.4"
